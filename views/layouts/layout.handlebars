    <style>
        .btn-link {
            color: #B8B9BA;
        }
        
        .btn-link:hover {
            color: #E8EEF4;
            background-color: #427BB4;
        }
        a:link,
        a:visited {
            color: #B8B9BA;
            padding: 8px 15px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
