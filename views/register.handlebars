<div class="bottom-buffer" style="margin-left: 8px; margin-top: 50px;">
    <h2>Registro</h2>
</div>

<form role="form" action="/users/registro" method="POST">

    <div class="form-group" style="margin-top: 30px;">
        <div>
            <!-- <input class="form-control" id="name" placeholder="Nombre completo" type="text" name="name" size="25" value="" onblur="javascript:this.value = this.value.toUpperCase();" autocomplete="off" style="border-color: rgb(204, 204, 204);"> -->
            <input class="form-control" id="name" placeholder="Nombre completo" type="text" name="name" size="25" value="" autocomplete="off" style="border-color: rgb(204, 204, 204);">
        </div>
    </div>

    <div class="form-group">
        <div>
            <input class="form-control" id="username" placeholder="Username" type="text" name="username" size="25" value="" autocomplete="off" style="border-color: rgb(204, 204, 204);">
        </div>
    </div>

    <div class="form-group">
        <div>
            <input class="form-control" id="email" placeholder="E-Mail" type="email" name="email" size="25" value="" autocomplete="off" style="border-color: rgb(204, 204, 204);">
        </div>
    </div>

    <div class="form-group">
        <div>
            <input class="form-control" id="password" placeholder="Contraseña" type="password" name="password" size="25" maxlength="16" autocomplete="off" style="border-color: rgb(204, 204, 204);">
        </div>
    </div>

    <div class="form-group">
        <div>
            <input class="form-control" id="password2" placeholder="Contraseña nuevamente" type="password" name="password2" size="25" maxlength="16" autocomplete="off" style="border-color: rgb(204, 204, 204);">
        </div>
    </div>

    <div class="clearfix">
        <div class="pull-right">
            <input class="btn btn-success" type="submit" value="Aceptar" style="float: right;">
        </div>
    </div>

</form>

<div class="row" id="divMsgError" style="margin-top: 20px;">
        <div class="col-xs-6 col-sm-12 col-lg-12">
            {{#if errors}}
                {{#each errors}}
                    <div class="alert alert-danger">
                        <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
                        <strong>{{msg}}</strong>
                    </div>
                {{/each}}
            {{/if}}
        </div>
    </div>